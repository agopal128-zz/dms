<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0"/>
    <add key="webpages:Enabled" value="false"/>
    <add key="ClientValidationEnabled" value="true"/>
    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
    <add key="LogProvider" value="log4net"/>
    <!--Configurations for the cache-->
    <add key="Cache.Duration" value="30"/>
    <add key="Cache.Mode" value="InProcess"/>
    <add key="Cache.App" value="NDMS"/>
    <add key="Cache.Environment" value="DEV"/>
    <!--Configuration rules for Scorecard-->
    <add key="MaxKPIOwnerCount" value="4"/>
    <add key="MaxTeamCount" value="15"/>
    <add key="KPIPrimaryMetricCount" value="1"/>
    <add key="KPISecondaryMetricCount" value="4"/>
    <add key="MaxKPICount" value="8"/>
    <!--Configurations for recordables-->
    <!-- Flag to enable display of days without recordables -->
    <add key="EnableNumberOfDaysWithoutRecordables" value="true"/>
    <add key="RecordableKPIId" value="0"/>
    <!--Id for Safety KPI-->
    <add key="RecordableMetricId" value="6"/>
    <!--Id for Recordables metric-->
    <!--Flag for Copy Metrics. If set to true it will copy the targets ending on 31st December of 'from' year-->
    <!--Otherwise it will copy the targets ending on any date in December-->
    <add key="CopyMetricByDate" value="true"/>
    <!--configuration flag to represent whether same KPI owner can have multiple scorecards-->
    <add key="SameKPIOwnerforMultipleScorecards" value="true"/>
    <!--configuration flag to represent whether same team can have multiple scorecards-->
    <add key="SameTeamMemberforMultipleScorecards" value="true"/>
    <!--Can have either of two entries here, UTC or Local(Server local time)-->
    <add key="NDMSTimeZone" value="UTC"/>
    <!--Name of the active directory server-->
    <!--Duration of scorecard page auto refresh in minute-->
    <add key="NDMSAutoRefreshDuration" value="5"/>
    <!--Duration of session timeout in minutes-->
    <add key="NDMSSessionTimeout" value="30"/>
  </appSettings>
  <connectionStrings>
    <add name="NDMS" connectionString="data source=DESKTOP-KKU5TJM\SQLEXPRESS2014;initial catalog=NDMSDatabase;User ID=sa;Password=qburst;Connection Timeout=30;" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <system.web>
    <compilation debug="true" targetFramework="4.6"/>
    <httpRuntime targetFramework="4.6"/>
  </system.web>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true">
      <remove name="WebDAVModule"/>
    </modules>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0"/>
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0"/>
      <remove name="OPTIONSVerbHandler"/>
      <remove name="TRACEVerbHandler"/>
      <remove name="WebDAV"/>
